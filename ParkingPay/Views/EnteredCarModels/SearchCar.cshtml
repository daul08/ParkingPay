@model ParkingPay.Models.EnteredCarModel

@{
    ViewData["Title"] = "SearchCar";
}

<h1>Оплата парковки</h1>

<h4>Введите номер автомобиля</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Государственный номер</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Поиск автомобиля" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

    <a asp-action="HomeIndex">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
